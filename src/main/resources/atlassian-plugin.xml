<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
    </plugin-info>

    <!-- internationalize your plugin -->
    <resource type="i18n" name="com.heroku language" location="english"/>

    <taskType key="com.heroku.bamboo.WarDeploymentTask" name="Heroku: Deploy WAR Artifact" class="com.heroku.bamboo.WarDeploymentTask">
        <description>Deploy a WAR artifact to Heroku</description>
        <category name="deployment"/>
        <configuration class="com.heroku.bamboo.WarDeploymentTaskConfigurator"/>
        <resource type="freemarker" name="edit" location="WarDeploymentTask.ftl"/>
        <resource type="download" name="icon" location="heroku_logo.png"/>
        <help link="heroku.task.help.link" title="heroku.task.help.title" />
    </taskType>
</atlassian-plugin>
